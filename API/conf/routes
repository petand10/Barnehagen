# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Routes for accessing and modifying children data
GET     /children/                  controllers.ChildrenController.get()
GET     /children/:id               controllers.ChildrenController.getChild(id:Long)
GET     /children/latest/:time         controllers.ChildrenController.getLatest(time:Long)
GET     /children/find/:name        controllers.ChildrenController.find(name)
POST    /children/                  controllers.ChildrenController.create()
POST    /children/:id/update        controllers.ChildrenController.update(id:Long)
POST    /children/:id/delete        controllers.ChildrenController.delete(id:Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
